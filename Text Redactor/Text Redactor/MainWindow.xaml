<Window x:Class="Text_Redactor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Text_Redactor"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ToolBar x:Name="tbControls" Grid.Row="0">
            <Button x:Name="btNew" Click="btNew_Click">
                <Image Source="graphics\toolbar\new.png"/>
            </Button>
            <Button x:Name="btOpen" Click="btOpen_Click">
                <Image Source="graphics\toolbar\open.png"/>
            </Button>
            <Button x:Name="btSave" Click="btSave_Click">
                <Image Source="graphics\toolbar\save.png"/>
            </Button>
            <Button x:Name="btSaveas" Click="btSaveas_Click">
                <Image Source="graphics\toolbar\saveas.png"/>
            </Button>
        </ToolBar>

        <DockPanel Name="TextPanel" Grid.Row="1">
            <RichTextBox Name="rtbText" Grid.Column="1"/>
        </DockPanel>
    </Grid>
</Window>
